@model System.Data.DataTable
@using System.Data

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QuizWizeQuestions List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item">QuizWizeQuestions</li>
                <li class="breadcrumb-item active">List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

   
                <form>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Search</h5>
                            <div class="row mb-1 mt-3">
                                <div class="col-sm-4">
                                    <label class="form-label" for="InputQuiz">Select Quiz</label>
                                    <input type="text" class="form-control" id="inputText" placeholder="Select Quiz">
                                </div>
                                <div>
                                    <button class="btn btn-success mt-3">Search</button>
                                    <button class="btn btn-danger mt-3">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

    <span class="text-danger">@TempData["ErrorMessage"]</span>
    <span class="text-danger">@TempData["SuccessMessage"]</span>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">QuizWizeQuestions List</h5>
                        <div class="d-flex justify-content-end">
                            <a asp-controller="QuizWizeQuestions" asp-action="QuizWizeQuestionsAdd">
                                <button class="btn btn-primary mb-2">Add QuizWizeQuestions</button>
                            </a>
                            <a asp-controller="QuizWizeQuestions" asp-action="ExportToExcel">
                                <button class="btn btn-outline-success mb-2 ms-1">Export to Excel</button>
                            </a>
                        </div>


                        <!-- Table with stripped rows -->
                        <div class="table-responsive">
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>QuizWiseQuestionsID</th>
                                    <th>QuizName</th>
                                    <th>QuestionText</th>
                                    <th>UserName</th>
                                    <th data-type="date" data-format="YYYY/DD/MM">Created</th>
                                    <th data-type="date" data-format="YYYY/DD/MM">Modified</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["QuizWiseQuestionsID"]</td>
                                        <td>@row["QuizName"]</td>
                                        <td>@row["QuestionText"]</td>
                                        <td>@row["UserName"]</td>
                                        <td>@row["Created"]</td>
                                        <td>@row["Modified"]</td>
                                        <td>
                                            <a asp-controller="QuizWizeQuestions" asp-action="QuizWizeQuestionsAdd" asp-route-QuizWiseQuestionsID="@row["QuizWiseQuestionsID"]">
                                                <i class="bi bi-pencil-square" style="color:green"></i>
                                            </a>
                                            <a href="javascript:void(0);" onclick="confirmDelete('@row["QuizWiseQuestionsID"]')">
                                                <i class="bi bi-trash3 text-danger"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                            <script>
                                function confirmDelete(quizwisequestionID) {
                                    Swal.fire({
                                        title: "Are you sure you want to delete?",
                                        text: "You won't be able to revert this!",
                                        icon: "warning",
                                        showCancelButton: true,
                                        confirmButtonColor: "#d33",
                                        cancelButtonColor: "#3085d6",
                                        confirmButtonText: "Yes, delete it!"
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = "/QuizWizeQuestions/QuizWizeQuestionsDelete?QuizWiseQuestionsID=" + quizwisequestionID;
                                        }
                                    });
                                }
                            </script>

                       </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->