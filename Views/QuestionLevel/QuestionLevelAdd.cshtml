@model QuestionLevelModel
<main class="main" id="main">
    <div class="pagetitle">
        <h1>QuestionLevel Add</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item">Question Level</li>
                <li class="breadcrumb-item active">Add/Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <!-- Vertical Form -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Question Level Add</h5>
            <form class="row g-3">
                <input asp-for="QuestionLevelID" type="hidden" />
                <div class="col-12">
                    <label for="inputQuestionLevel" class="form-label"><span style="color:red">*</span>Question Level</label>
                    <select class="form-control" asp-for="QuestionLevel">
                        <option value="">Select Question Level</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                    <span asp-validation-for="QuestionLevel" style="color:red"></span>
                </div>
                <div class="col-12">
                    <label for="inputUserName" class="form-label"><span style="color:red">*</span>User Name</label>
                    <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.userList, "UserID", "UserName"))">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" style="color:red"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success" asp-controller="QuestionLevel" asp-action="Save">Save</button>
                    <button type="reset" class="btn btn-danger"><a asp-controller="QuestionLevel" asp-action="QuestionLevelList" style="color:white;">Cancel</a></button>
                </div>

            </form><!-- Vertical Form -->
        </div>
    </div>
</main>

